{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES6",
    "module": "commonjs",
    "noEmit": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": [
    "algorithms/**/*",
    "challenges/**/*",
    "data-structures/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
